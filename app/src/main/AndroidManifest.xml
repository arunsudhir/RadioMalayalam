<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arunsudhir.radiomalayalam" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".SongListActivity"
            android:label="@string/title_song_list" >
        </activity>
        <activity
            android:name=".SongDetailActivity"
            android:label="@string/title_song_detail"
            android:parentActivityName=".SongListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SongListActivity" />
        </activity>

        <service
            android:name=".service.PlayerService"
            android:enabled="true" >
        </service>

        <activity
            android:name=".PlayListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".song.PlaylistCardActivity"
            android:label="@string/title_activity_playlist_card" >
        </activity>
    </application>

</manifest>
